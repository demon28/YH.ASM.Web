<script>



    var vm = new Vue({
        el: "#tab_account",
        data: {
            type: "add",
            id: 0,
            model: {}
        },
        created: function () {

            var ops = getQueryString("type");

            if (ops == "add") {
                this.type = "添加";
                return;
            }
            this.type = "修改";

            this.id = getQueryString("id");


            this.Init();


        },
        mounted: function () {

            $('#txt_check_enddate,#txt_check_stardate ,#txt_check_stardate,#txt_debug_enddate,#txt_debug_stardate,#txt_install_enddate,#txt_install_stardate,#txt_productdate').datetimepicker({
                format: 'yyyy-mm-dd hh:ii:ss',
                autoclose: true,
                /* minView: "month",  *///选择日期后，不会再跳转去选择时分秒
                language: 'zh-CN',
                dateFormat: 'yyyy-mm-dd',//日期显示格式
                timeFormat: 'HH:mm:ss',//时间显示格式
                todayBtn: 1,
                autoclose: 1,
                minView: 0,  //0表示可以选择小时、分钟   1只可以选择小时
                minuteStep: 1,//分钟间隔1分钟


            })

        },
        methods: {

            Init() {

                var self = this;

                MyAjax({
                    url: "/Project/GetUpdateInfo",
                    type: "POST",
                    data: {
                        id: self.id
                    },
                    success: function (result) {

                        console.log(JSON.stringify(result));

                        if (!result.Success) {
                            alert_danger(result.Message);
                            return;
                        }



                        self.model = result.Content;


                    }
                })
            },


            Add: function () {

                showWui("/Project/AddAndUpdate?type=add");
            },
            Update: function (item) {
                showWui("/Project/AddAndUpdate?type=update&id=" + item.pid);

            }

        }




    });





</script>
