@section scripts{
 
   <script>


       var vm = new Vue({
           el: "#tab_account",
           data() {
               return {
                   list: [],
                   pageIndex:1,
                   pageSize:15,
                   pageCount:20,
                   TotalCount:0
               };
           },
           created: function () {

               this.Init();


           },
           methods: {

               Init() {

                   var self = this;
                   var keywork = $("#txt_Search").val();

                   console.log("请求数据：" + keywork);


                   MyAjax({
                       url: "/Project/List",
                       type: "POST",
                       data: {
                           keywords: keywork,
                           pageIndex: self.pageIndex,
                           pageSize: self.pageSize
                       },
                       success: function (result) {

                           console.log(JSON.stringify(result));

                           if (!result.Success) {
                              
                               alert_danger(result.Message);
                               return;
                           }

                           self.list = result.Content;

                           pageIndex = result.PageIndex;
                           pageSize = result.PageSize;
                           pageCount = result.PageCount;
                           TotalCount = result.PageTotal;

                           self.PageBind();
                       }
                   })
               },

               Search: function () {
                   pageIndex = 1;
                   this.Init();
               },
               PageBind: function () {
                   var self = this;

                   $("#ul_page").jqPaginator({
                       totalPages: self.pageCount,
                       visiblePages: self.pageSize,
                       currentPage: self.pageIndex,

                       first: ' <li><a href="#">First</a></li>',
                       prev: ' <li><a href="#">&laquo;</a></li>',
                       next: ' <li><a href="#">&raquo;</a></li>',
                       last: '<li><a href="#">Last<\/a><\/li>',
                       page: '<li><a href="javascript:void(0);">{{page}}<\/a><\/li>',

                       onPageChange: function (num, type) {

                           pageIndex = num;

                           if (type == "change") {
                               vm.Init();
                           }
                       }
                   });
               },
               ExportExcel: function () {
                   var keyword = $("#txt_Search").val();
                   window.location = "/Project/ExportExcel?keyword=" + keyword;
               }


           }




       });


   </script>

}

