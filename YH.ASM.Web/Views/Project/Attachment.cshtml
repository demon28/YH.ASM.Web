<script>


    var vm = new Vue({
        el: "#tab_account",
        data: {
            id: 0,      //主键id
            list: [],
        },
        created: function () {

            this.id = getQueryString("id");
            this.Init();

        },
        mounted: function () {



        },
        methods: {

            Init() {

                var _self = this;

                _self.id = getQueryString("id");


                MyAjax({
                    url: "/Project/LisAttachmentt",
                    type: "POST",
                    data: {
                        id: _self.id
                    },
                    success: function (result) {

                        console.log(JSON.stringify(result));

                        if (!result.Success) {
                            alert_danger(result.Message);
                            return;
                        }
                        _self.list = result.Content;


                    }
                })
            },

            View: function (item) {

            },

            Download: function (item) {

            },
            Delete: function (item) {

                var _self = this;

                MyAjax({
                    url: "/Project/DeleteAttachment",
                    type: "POST",
                    data: {
                        aid: item.AID,
                    },
                    success: function (result) {

                        console.log(JSON.stringify(result));

                        if (!result.Success) {
                            alert_danger(result.Message);
                            return;
                        }

                        alert_info(result.Message);
                    }
                })



            },

            Add: function () {



            }
        }




    });






</script>