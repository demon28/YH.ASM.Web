

@{
    ViewBag.Title = "Index";
}

@section Pageheader{


    <h1>
        <small>  人员信息</small>

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Setting</li>
    </ol>

}


<section class="content">
    <div class="row">

        <!-- /.col -->
        <div class="col-md-9">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Account List</h3>

                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover" id="tab_account">
                        <tbody>
                            <tr>
                                <th>工号</th>
                                <th>姓名</th>
                                <th>密码</th>
                                <th>状态</th>
                                <th>数据来源</th>
                                <th>创建时间</th>
                                <th>操作</th>
                            </tr>
                            <tr v-for="(item,index) in list">
                                <td>{{item.WORK_ID}}</td>
                                <td>{{item.USER_NAME}}</td>
                                <td>********</td>
                                <td>{{item.USER_PWD}}</td>

                                <td>
                                    <span class="label label-success" v-if="item.USER_STATUS==0">正常</span>
                                    <span class="label label-warning" v-if="item.USER_STATUS==1">冻结</span>
                                    <span class="label label-danger" v-if="item.USER_STATUS==2">关闭</span>
                                </td>

                                <td>{{item.DATA_SOURCE}}</td>
                                <td>{{item.CREATETIME}}</td>
                                <td>
                                    <button type="button" class="btn bg-purple  btn-xs" v-on:click="Details(item)">详情</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <!-- /.box-body -->
                <div class="box-footer no-padding">
                    <div class="mailbox-controls">
                        <!-- Check all button -->
                        <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                            <i class="fa fa-square-o"></i>
                        </button>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm btn_alldeltemp"><i class="fa fa-trash-o"></i></button>
                            <button type="button" class="btn btn-default btn-sm pagefront"><i class="fa fa-reply"></i></button>
                            <button type="button" class="btn btn-default btn-sm pagenext"><i class="fa fa-share"></i></button>
                        </div>
                        <!-- /.btn-group -->
                        <button type="button" class="btn btn-default btn-sm recrefresh"><i class="fa fa-refresh"></i></button>
                        <div class="pull-right">
                            {{pageIndex}}-{{totalPages}}/{{totalCount}}
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm pagefront"><i class="fa fa-chevron-left"></i></button>
                                <button type="button" class="btn btn-default btn-sm pagenext"><i class="fa fa-chevron-right"></i></button>
                            </div>
                            <!-- /.btn-group -->
                        </div>
                        <!-- /.pull-right -->
                    </div>
                </div>


            </div>
            <!-- /. box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->




</section>



<script type="text/javascript">

    var pageIndex = 1;
    var pageSize = 20;
    var totalCount;
    var totalPages;

    $(document).ready(function () {
        Load();
    });


    var vm;
    function Load() {

        vm = new Vue({
            el: "#tab_account",
            data: {
                list: []
            },
            created: function () {

                this.Init();
            },
            methods: {
                Init: function () {
                    var self = this;
                    $.ajax({
                        url: "/People/GetList",
                        type: "POST",
                        success: function (result) {
                            if (result.Success) {

                                console.log(JSON.stringify(result));
                                self.list = result.Content.Data;
                            }
                        }
                    })
                },
                Details: function (item) {
                    $.ajax({
                        url: "/Account/Details",
                        type: "POST",
                        data: {
                            workid: item.work_id
                        },
                        success: function (result) {
                            if (result.Success) {
                                vm.Init();
                            }
                        }
                    });

                }
             
              
            }
        });
    }


 

</script>