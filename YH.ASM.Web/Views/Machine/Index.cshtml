@section scripts{

    <script>


       var vm = new Vue({
           el: "#tab_account",
           data: {
               list: [],
              
               MachinTypes: [],
               pageIndex: 1,
               pageSize: 10,
               pageCount: 20,
               pageTotal: 0,
               operation: "add",
               types: {},

               id:0,
               typename:"",
               installday:0,
               debugday: 0,
               checkday: 0,
           },
           created: function () {
               this.Init();
               this.InitTypes();
           },
           methods: {

               Init() {

                   var self = this;
                   var keywork = $("#txt_Search").val();

                   console.log("请求数据：" + keywork);


                   MyAjax({
                       url: "/Machine/List",
                       type: "POST",
                       data: {
                           keywords: keywork,
                           pageIndex: self.pageIndex,
                           pageSize: self.pageSize
                       },
                       success: function (result) {

                          // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           self.list = result.Content;



                           self.pageIndex = result.PageIndex;
                           self.pageSize = result.PageSize;
                           self.pageCount = result.PageCount;
                           self.TotalCount = result.PageTotal;

                           self.PageBind();
                       }
                   })
               },

               Search: function () {
                   pageIndex = 1;
                   this.Init();
               },
               PageBind: function () {
                   var self = this;

                   console.log()

                   $("#ul_page").jqPaginator({
                       totalPages: self.TotalCount,
                       visiblePages: self.pageSize,
                       currentPage: self.pageIndex,

                       first: ' <li><a href="#">First</a></li>',
                       prev: ' <li><a href="#">&laquo;</a></li>',
                       next: ' <li><a href="#">&raquo;</a></li>',
                       last: '<li><a href="#">Last<\/a><\/li>',
                       page: '<li><a href="javascript:void(0);">{{page}}<\/a><\/li>',

                       onPageChange: function (num, type) {

                           self.pageIndex = num;

                           if (type == "change") {
                               self.Init();
                           }
                       }
                   });
               },
               ExportExcel: function () {
                   var keyword = $("#txt_Search").val();
                   window.location = "/Machine/ExportExcel?keyword=" + keyword;
               },
               Del: function (item) {
                   var self = this;
                   bootbox.confirm("您确定删除改记录吗？", function (res) {
                       if (res) {

                           MyAjax({
                               url: "/Machine/Delete",
                               type: "POST",
                               data: {
                                   id: item.MID
                               },
                               success: function (result) {

                                   if (!result.Success) {

                                       alert_danger(result.Message);
                                       return;
                                   }
                                   alert_success("删除成功");
                                   self.Init();

                               }
                           })
                       }
                   });



               },
               Add: function () {
                   console.log("开始添加");
                   showWui("/Machine/AddAndUpdate?type=add");
               },
               Update: function (item) {
                   console.log("开始修改");
                   showWui("/Machine/AddAndUpdate?type=update&id=" + item.MID);

               },
               Formtat: function (date) {

                   if (date == "" || date == null || date=="null") {
                       return "";
                   }

                   return date.substr(0, 10);
               },

               InitTypes: function () {

                   var self = this;
                   MyAjax({
                       url: "/Machine/ListTypes",
                       type: "POST",
                       data: {

                       },
                       success: function (result) {

                           // console.log(JSON.stringify(result));
                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           self.MachinTypes = result.Content;

                       }
                   })
               },
               DelTypes: function (item) {
                   var self = this;
                   bootbox.confirm("您确定删除改记录吗？", function (res) {
                       if (res) {

                          
                           MyAjax({
                               url: "/Machine/DeleteTypes",
                               type: "POST",
                               data: {
                                   id: item.ID
                               },
                               success: function (result) {

                                   if (!result.Success) {

                                       alert_danger(result.Message);
                                       return;
                                   }
                                   alert_success("删除成功");
                                   self.InitTypes();

                               }
                           })
                       }
                   });


               },
               ShowAddTypes: function () {
                   this.operation = "add";
                   $('#modal-default').modal('show');
               },
               CheckMachine: function (item) {

                   $("#txt_Search").val(item.NAME);
                   this.Search();
               },
               AddTypes: function () {

                   var _self = this;

                   console.log("AddTypes");
                   MyAjax({
                       url: "/Machine/AddTypes",
                       type: "POST",
                       data: {
                           NAME: _self.typename,
                           INSTALLDAYS: _self.installday,
                           DEBUGDAYS: _self.debugday,
                           CHECKDAYS: _self.checkday,
                       },
                       success: function (result) {

                           console.log(JSON.stringify(result));

                           if (!result.Success) {
                               alert_danger(result.Message);
                               return;
                           }

                           alert_success(result.Message);

                           _self.InitTypes();

                       }
                   })

               },

               UpdateTypes: function () {

                   var _self = this;

                   MyAjax({
                       url: "/Machine/UpdateTypes",
                       type: "POST",
                       data: {
                           ID: _self.id,
                           NAME: _self.typename,
                           INSTALLDAYS: _self.installday,
                           DEBUGDAYS: _self.debugday,
                           CHECKDAYS: _self.checkday,
                       },
                       success: function (result) {

                           console.log(JSON.stringify(result));

                           if (!result.Success) {
                               alert_danger(result.Message);
                               return;
                           }

                           alert_success(result.Message);

                           _self.InitTypes();

                       }
                   })

               },

               UpdateMachine: function(item) {

                   $('#modal-default').modal('show');

                   this.operation = "update";
                   var self = this;

                   console.log("=========" + item.ID);

                   MyAjax({
                       url: "/Machine/GetTypesInfo",
                       type: "POST",
                       data: {
                           id: item.ID
                       },
                       success: function (result) {

                           console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }
                           self.id = result.Content.ID;
                           self.typename = result.Content.NAME;
                           self.installday = result.Content.INSTALLDAYS;
                           self.debugday = result.Content.DEBUGDAYS;
                           self.checkday = result.Content.CHECKDAYS;

                           self.InitTypes();

                       }
                   })
               }
           },



       });


    </script>

}

