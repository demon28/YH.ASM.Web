            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-envelope "></i> &nbsp;&nbsp;现场人员处理工单</h3>
                    <div class="box-tools pull-right">

                    </div>

                </div>
                <!-- /.box-header -->
                <div class="box-body ">



                    <form class="form-horizontal" style="margin-top:10px">

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-1 control-label" style="padding-right:0px">完成时间：</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control input-sm" v-model="siteInfo.ENDDATE" id="txt_enddate">
                            </div>

                        </div>



                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-1 control-label" style="padding-right:0px">结果描述：</label>
                            <div class="col-sm-8" style="text-align:left">

                                <textarea class="form-control" style="margin-left:0px" rows="6" placeholder="请填写结果描述" v-model="siteInfo.DESCRIPTION"></textarea>
                            </div>

                        </div>





                    </form>

                </div>
                <div class="box-footer">

                </div>
                <!-- /.box-body -->
            </div>

            <!-- Custom Tabs -->
            <!-- /.nav-tabs-custom -->
        </div>


        <!--负责人审核开始-->
        <div class="col-md-4" v-if="principalShow">


            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-envelope "></i> &nbsp;&nbsp; 负责人审核</h3>
                    <div class="box-tools pull-right">



                    </div>

                </div>
                <!-- /.box-header -->
                <div class="box-body ">


                    <div class="form-inline" style="margin-top:10px">

                    </div>


                    <form class="form-horizontal" style="margin-top:10px">

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-1 control-label" style="padding-right:0px">完成时间：</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control input-sm" v-model="principalInfo.ENDDATE" id="txt_enddate">
                            </div>

                        </div>



                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-1 control-label" style="padding-right:0px">审核人员：</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control input-sm" v-model="principalInfo.CHECKUSER" placeholder="请输入审核人员姓名">
                            </div>

                        </div>







                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-1 control-label" style="padding-right:0px">结果描述：</label>
                            <div class="col-sm-8" style="text-align:left">

                                <textarea class="form-control" style="margin-left:0px" rows="6" placeholder="请填写结果描述" v-model="principalInfo.RESULT"></textarea>
                            </div>

                        </div>

                        <!-- /.box-body -->
                        <!-- /.box-footer -->




                    </form>

                </div>
                <div class="box-footer">
             
                </div>
                <!-- /.box-body -->
            </div>

            <!-- Custom Tabs -->
            <!-- /.nav-tabs-custom -->
        </div>



    </div>
    <!-- /.col -->
    <!-- /.row -->



</section>

<!-- Control Sidebar -->

<div class="wui-masked" style="position:fixed;background:#fff;top:0;left:0;right:0;bottom:0;z-index:9998;opacity:0.3;display:none;"
     onclick="closeWui()"></div>


