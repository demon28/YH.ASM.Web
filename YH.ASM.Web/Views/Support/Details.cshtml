@section scripts{

    <script>


        var vm = new Vue({
            el: "#tab",
            data: {
                id: 0,
                list: [],
                Statuslist: [],

                supportInfo: {},
                supportShow: false,

                disposerInfo: {},
                disposerShow: false,

                pmcInfo:{},
                pmcShow: false,

                siteInfo: {},
                siteShow: false,

                principalInfo: {},
                principalShow: false


           },
           created: function () {

               this.Init();
           },
           mounted: function () {


               this.Statuslist.push({ value: 0, text: "已提交" });
               this.Statuslist.push({ value: 1, text: "处理中(PMC跟进)" });
               this.Statuslist.push({ value: 2, text: "已处理(无需PMC)" });
               this.Statuslist.push({ value: 3, text: "已处理(PMC完成)" });
               this.Statuslist.push({ value: 4, text: "待审核" });
               this.Statuslist.push({ value: 5, text: "未完成" });
               this.Statuslist.push({ value: 6, text: "已完成" });
               this.Statuslist.push({ value: 7, text: "已拒绝" });


           },
           methods: {

               Init() {

                   var self = this;
                   self.id = getQueryString("id");

                   MyAjax({
                       url: "/Support/ListDetails",
                       type: "POST",
                       data: {
                           id: self.id
                       },
                       success: function (result) {

                          // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           self.list = result.Content;

                       }
                   })
               },
               SetStatus(value) {

                   var res = "";
                   this.Statuslist.forEach(function (element) {
                       if (element.value == value) {
                           res = element.text;
                       }
                   });
                   return res;
               },
               View(item) {
                   var _self = this;

                   $("#div_his").addClass("col-md-8");


                   //显示工单创建内容
                   if (item.TYPE==0) {

                       _self.supportShow = true;
                       _self.disposerShow = false;
                       _self.pmcShow = false;
                       _self.siteShow = false;
                       _self.principalShow = false;

                       _self.ShowSupportInfo(item);

                       return;
                   }


                   if (item.TYPE == 1) {

                       _self.supportShow = false;
                       _self.disposerShow = true;
                       _self.pmcShow = false;
                       _self.siteShow = false;
                       _self.principalShow = false;

                       _self.ShowdisposerInfo(item);
                       return;

                   }

                   if (item.TYPE == 2) {

                       _self.supportShow = false;
                       _self.disposerShow = false;
                       _self.pmcShow = true;
                       _self.siteShow = false;
                       _self.principalShow = false;

                       _self.ShowpmcInfo(item);
                       return;

                   }
                   if (item.TYPE == 3) {

                       _self.supportShow = false;
                       _self.disposerShow = false;
                       _self.pmcShow = false;
                       _self.siteShow = true;
                       _self.principalShow = false;

                       _self.ShowsiteInfo(item);
                       return;

                   }
                   if (item.TYPE == 4) {

                       _self.supportShow = false;
                       _self.disposerShow = false;
                       _self.pmcShow = false;
                       _self.siteShow = false;
                       _self.principalShow = true;

                       _self.ShowprincipalInfo(item);
                       return;

                   }

               },
               ShowSupportInfo(item) {
                   var _self = this;

                   //加载 工单信息
                   MyAjax({
                       url: "/Support/GetSupportInfo",
                       type: "POST",
                       data: {
                           id: item.TID
                       },
                       success: function (result) {

                           // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           _self.supportInfo = result.Content;

                       }
                   })

               },
               ShowdisposerInfo(item) {
                   //加载技术人员处理信息
                   var _self = this;
                   MyAjax({
                       url: "/Support/GetDisposerInfo",
                       type: "POST",
                       data: {
                           id: item.TID
                       },
                       success: function (result) {

                           // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           _self.disposerInfo = result.Content;

                       }
                   })
               },
               ShowpmcInfo(item) {
                   //加载pmc 信息
                   var _self = this;

                   MyAjax({
                       url: "/Support/GetPmcInfo",
                       type: "POST",
                       data: {
                           id: item.TID
                       },
                       success: function (result) {

                           // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           _self.pmcInfo = result.Content;

                       }
                   })
               },
               ShowsiteInfo(item) {
                   //加载现场人员处理信息
                   var _self = this;

                   MyAjax({
                       url: "/Support/GetSiteInfo",
                       type: "POST",
                       data: {
                           id: item.TID
                       },
                       success: function (result) {

                           // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           _self.siteInfo = result.Content;

                       }
                   })
               },
               ShowprincipalInfo(item) {
                   //加载审核处理信息
                   var _self = this;
                   MyAjax({
                       url: "/Support/GetPrincipalInfo",
                       type: "POST",
                       data: {
                           id: item.TID
                       },
                       success: function (result) {

                           // console.log(JSON.stringify(result));

                           if (!result.Success) {

                               alert_danger(result.Message);
                               return;
                           }

                           _self.principalInfo = result.Content;

                       }
                   })
               }




           },



       });


    </script>

}




