                InsertPrincipal(sid, tid) {
                    console.log("InsertPrincipal=======5");
                    var _self = this;

                    $.ajax({
                        url: "/SupportTimeLine/GetPrincipalInfo",
                        type: "POST", async: false,
                        data: {
