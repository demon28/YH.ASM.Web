                        success: function (result) {

                            console.log(JSON.stringify(result));

                            if (!result.Success) {

                                return;
                            }

                            _self.siteInfo = result.Content;
                            var html = SiteWF(_self.siteInfo);
                            $("#ul_wf").append(html);
                        }
                    })





