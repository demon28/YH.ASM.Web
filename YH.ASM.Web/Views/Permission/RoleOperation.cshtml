</head>
<body class="hold-transition skin-blue sidebar-mini">

    <section class="content">
        <div class="row">

            <!-- /.col -->
            <div id="tab_func">
                <div class="box">
                    <div class="box-header">

                    </div>
                    <!-- /.box-header -->


                    <div class="box-body">


                        <table class="table ">
                            <tbody>
                                <tr>
                                    <th>请选择</th>

                                </tr>
                                <tr v-for="(item,index) in list">


                                    <td>
                                        <label>
                                            <input name="rolecheck" type="checkbox" class="minimal" :value=item.FUNC_ID :id="'ck_'+item.FUNC_ID">
                                            {{item.FUNC_NAME}}
                                        </label>
                                    </td>

                                </tr>

                            </tbody>
                        </table>

                    </div>
                    <!-- /.box-body -->


                    <button type="button" class="btn btn-block btn-primary" id="btn_save" @@click="SaveFunc()">保 存</button>

                </div>
            </div>

        </div>
        <!-- /.col -->
        <!-- /.row -->






    </section>


    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="~/Reference/adminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Reference/adminLTE/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Reference/adminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/Reference/adminLTE/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Reference/adminLTE/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Reference/adminLTE/dist/js/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->

    <script src="~/Reference/adminLTE/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Reference/scripts/jquery.bootstrap-growl.js"></script>
    <script src="~/Reference/scripts/alertsjavascrtpt.js"></script>
    <script src="~/js/jq-paginator.min.js"></script>
    <script src="~/Reference/bootbox/bootbox.min.js"></script>
    <script src="~/Reference/scripts/CommonScript.js"></script>

    <script>


            $(document).ready(function () {

                Load();

            });
            var funcvm;
            function Load() {

                rolevm = new Vue({

                    el: "#tab_func",
                    data: {
                        list: [],
                    },
                    created: function () {

                        this.Init();

                    },
                    methods: {
                        Init: function () {

                            var self = this;

                            MyAjax({
                                url: "/Permission/GetFuncAll",
                                type: "POST",
                                data: {

                                },
                                success: function (result) {

                                    if (result.Success) {

                                        self.list = result.Content;
                                        IsCheck();
                                    }
                                }
                            })
                        },

                        SaveFunc: function () {

                            console.log("配置角色");

                            var list = new Array();
                            var rid = getQueryString("roleid");
                            var checkedbox = $("input[id^='ck_']:checked");

                            checkedbox.each(function () {
                                list.push(this.value);
                            });

                            MyAjax({
                                url: "/Permission/SaveFuncRole",
                                type: "POST",
                                data: {
                                    funclist: list,
                                    roleid: rid
                                },
                                success: function (result) {


                                    console.log(JSON.stringify(result));

                                    if (result.Success) {

                                        alert_success("更新成功！");

                                    } else {
                                        alert_danger(result.Message);
                                    }
                                }
                            })



                        }
                    }

                });

            }


            function IsCheck() {
                var rid = getQueryString("roleid");
                console.log("w======" + rid);
                MyAjax({
                    url: "/Permission/ListByRoleid",
                    type: "POST",
                    data: {
                        roleid: rid
                    },
                    success: function (result) {

                        if (!result.Success) {
                            return;
                        }
                        console.log("s======"+JSON.stringify(result));

                        for (var i = 0; i < result.Content.length; i++) {


                            for (var j = 0; j < rolevm.list.length; j++) {

                                var lis_rid = rolevm.list[j].FUNC_ID;
                                var right_rid = result.Content[i].MEMBER_ID;

                                console.log("lis_rid======" + lis_rid);
                                console.log("right_rid======" + right_rid);
                           

                                if (lis_rid == right_rid) {


                                    $("#ck_" + lis_rid).attr("checked", true);


                                }


                            }


                        }


                    }
                })
            }

    </script>





</body>


