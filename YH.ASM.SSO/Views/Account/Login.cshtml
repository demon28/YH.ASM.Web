@{
    ViewData["Title"] = "Login Page";
    Layout = "";
}
@model LoginInputModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Reference/adminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Reference/adminLTE/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Reference/adminLTE/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Reference/adminLTE/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Reference/adminLTE/pluginst/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="hold-transition login-page">
    <div class="login-box">

        <form asp-route="Login">
            <div class="login-logo">
                <a>售后服务管理系统</a>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">请输入您的账号密码</p>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="账号" asp-for="Username">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="密码" asp-for="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>


                <div class="row">

                    @*<div class="icheck-primary " style="margin-left:20px">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            记住我
                        </label>
                    </div>*@

                    <!-- /.col -->
                    <div class="col-xs-4 pull-right">
                        <input type="submit" class="btn btn-primary btn-block" value="登 录" />
                    </div>
                    <!-- /.col -->
                </div>

            </div>
            <!-- /.login-box-body -->
        </form>
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Reference/adminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Reference/adminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
</html>





